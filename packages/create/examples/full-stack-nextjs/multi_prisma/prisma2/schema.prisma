datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL2")
}

generator client {
  provider = "prisma-client-js"
  output   = "./client"
  previewFeatures = ["selectRelationCount", "nApi", "referentialActions"]
}

model Admin {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  email     String   @unique
  name      String?
  password  String
  logs      Log[]
}

model Log {
  id        Int      @id @default(autoincrement())
  title     String
  author    Admin?   @relation(fields: [authorId], onDelete: Cascade, references: [id])
  authorId  Int?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
